<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/> <!-- Dark semi-transparent color -->
            <corners android:radius="8dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Default color -->
            <corners android:radius="8dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</selector>
