<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <ImageView
        android:id="@+id/view_category_businesses_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:padding="5dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/back_icon_selector"/>



    <TextView
        android:id="@+id/chosen_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOSEN CATEGORY BUSINESSES"
        android:fontFamily="@font/muli_black"
        android:layout_marginTop="55dp"
        android:padding="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_businesses_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/chosen_category_title"/>

</RelativeLayout>