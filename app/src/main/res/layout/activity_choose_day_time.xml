<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="126dp"
        android:text="Please choose a date"
        android:textSize="20dp" />

    <CalendarView
        android:id="@+id/calendarViewSelectDateToBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/textViewSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarViewSelectDateToBook"
        android:layout_marginTop="3dp"
        android:padding="16dp"
        android:text="Selected Date: None" />

    <LinearLayout
        android:id="@+id/layoutHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSelectedDate"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/textViewOpenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Time: " />

        <TextView
            android:id="@+id/textViewCloseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Time: " />

        <!-- Inputs for editing hours, if required -->
        <!-- Example: TimePicker or EditText for open and close times -->

        <!-- Save Button for updating special hours -->
        <Button
            android:id="@+id/buttonGotoTimeSlotsSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:text="choose time slot" />

    </LinearLayout>

</RelativeLayout>
