<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:padding="16dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/appointment_business_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/barber_example"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/appointment_business_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/appointment_business_image"
            android:fontFamily="@font/brandon1"
            android:text="Barbershop"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/appointment_business_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_business_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/appointment_business_image"
            android:text="Tuesday Feb 20 2024"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appointment_business_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_business_day"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/appointment_business_image"
            android:text="09 : 00  -  09 : 30"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appointment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/appointment_business_day"
            android:layout_toLeftOf="@+id/cancel_appointment"
            android:textSize="15dp"
            android:text="waiting"
            android:layout_below="@+id/appointment_business_title"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/colorPrimaryDark"
            />




        <ImageView
            android:id="@+id/cancel_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_24"
            android:background="@drawable/back_icon_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>