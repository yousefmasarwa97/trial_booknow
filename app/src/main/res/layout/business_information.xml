<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightwhite"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:padding="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/business_info_back_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_arrow_back_24"
                        android:background="@drawable/back_icon_selector"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        />


                    <TextView
                        android:id="@+id/business_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/brandon1"
                        android:text="Barbershop"
                        android:textSize="40sp"
                        app:cardElevation="8dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/business_name"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/business_image"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_below="@+id/business_name"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/business_icon"

                            />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_card"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/muli_black"
                        android:text="DESCRIPTION"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/description_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="description content"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/services"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/muli_black"
                        android:text="SERVICES"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/services_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/services"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="nservices content"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/working_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/services_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/muli_black"
                        android:text="WORKING HOURS"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/working_hours_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/working_hours"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="working hours content"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/booking_appointment_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/working_hours_content"
                        android:layout_marginTop="50dp"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        android:text="BOOK AN APPOINTMENT">

                    </Button>

                </RelativeLayout>

            </ScrollView>


        </androidx.cardview.widget.CardView>





    </LinearLayout>


</ScrollView>