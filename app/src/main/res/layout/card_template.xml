<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="40dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/brandon1"
                android:text="Barbershop"
                android:textSize="40sp"
                app:cardElevation="8dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/image_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_name"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/business_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/business_name"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/barber_example"

                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_card"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/muli_black"
                android:text="DESCRIPTION"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/description_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/muli"
                android:text="This is an example description of a business "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/muli_black"
                android:text="SERVICES"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/services_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/services"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/muli"
                android:text="service1 \nservice2 \nservice3\nservice4\nservice5\nservice6\nservice7
\nservice8\nservice9\nservice10\nservice11\nservice12\nservice13"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/working_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/services_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/muli_black"
                android:text="WORKING HOURS"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/working_hours_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/working_hours"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/muli"
                android:text="Sunday: 08:00 - 15:00 \nMonday: 08:00 - 15:00 \nTuesday: 08:00 - 15:00
            \nWednesday: 08:00 - 15:00\nThursday: 08:00 - 15:00\nFriday: 08:00 - 15:00\nSaturday: 08:00 - 15:00"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </RelativeLayout>

    </ScrollView>
</androidx.cardview.widget.CardView>